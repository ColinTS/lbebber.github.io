whiteish = #FFEDDB
yellow = #F7F7B6
pink = #E96F92
purple = #75517D
blackish = #1B2947
green = #54fad4

font-sans='Avenir Next',Futura,Montserrat,'Helvetica Neue',Helvetica,Roboto,sans-serif;
font-serif='Georgia',serif;

body
  background whiteish
  margin 0
  padding 0
  color blackish
  font-family font-serif
  font-size 20px
  line-height 1.6

a
  color pink

p.heading
  font-size 1.2em
p
  text-indent 1em
  margin-top 0.5em
  margin-bottom 0.5em

nav
  position absolute
  width 100%
  z-index 2
  padding-top 20px
  padding-bottom 20px
  text-align center

.Nav-link
  color whiteish
  font-family font-sans
  text-decoration none
  font-weight bold
  margin-left 50px
  margin-right 50px

.Nav-link:first-child
  margin-left 0

.Nav-link:last-child
  margin-right 0

.text-center
  text-align center

absolute-fill()
  position absolute
  top 0
  left 0
  right 0
  bottom 0

.Header
  position relative
  height 75vh
  margin-bottom 90px

.Scene
  absolute-fill()

.Scene--bottom
  position relative
  width 100%
  transform rotate(180deg)
  height 150px
  overflow hidden
  margin-top -25px
  pointer-events none

.Scene-sky
  absolute-fill()
  background linear-gradient(#1B2947, #282F51, #36365A, #443C63, #52426B, #614973, #704F7B, #815482, #935988, #A55D8D, #B86291, #CB6692, #DD6B93, #EC7691, #F18C90, #F3A195, #F3B6A0, #F3C9B2, #F3DCC7, #F6EDE1)

.Scene-stars
  absolute-fill()
  width 100%
  height 100%

.Scene-mountains
  position absolute
  bottom 0
  left 0
  width 100%
  height 300px
  margin-bottom -150px


.Scene-mountains--bottom
  margin-bottom 0

.Title
  font-family font-sans 
  color green
  position absolute
  top 50%
  width 100%
  text-align center
  text-transform uppercase
  margin-top -50px
  letter-spacing 0.2em
  font-size 45px
  line-height 1.4
  font-weight bold

.Title-big
  display block
  height 1em
  margin-bottom 0.2em

.Title-small
  display block
  font-size 0.6em
  color whiteish
  height 1em
  letter-spacing 0.2em
  margin-bottom 15px

.Title-separator
  // margin-top 10px

.Title-Center 
  position relative
  width 0
  margin-left auto
  margin-right auto

.Title-Center-left
  position absolute
  right 10px
  margin-right -0.2em

.Title-Center-right
  position absolute
  left 10px

section
  padding-bottom 70px
  margin-bottom 50px
  position relative
  &::after
    content ''
    display block
    width 300px
    height 1px
    position absolute
    left 50%
    bottom 0
    margin-left - ( @width / 2 )
    background purple
    opacity 0.15


footer
  margin-bottom 10px

h2
  text-align center
  font-family font-sans
  font-size 40px
  margin 0
  padding-top 30px
  margin-bottom 30px
  &::after
    content ''
    background url('../img/separator.svg') no-repeat
    display block
    width 67px
    height 17px
    margin 0 auto
    margin-top 18px

h3
  margin 0
  font-family font-sans
  font-weight bold
  font-size 30px
  line-height 1

.container
  width 700px
  margin 0 auto
  position relative


.Works
  list-style-type none
  margin 0
  padding 0
  font-size 0
  padding-top 20px

.Work
  display block
  margin-bottom 60px
  font-size 0
  &:last-child
    margin-bottom 30px

.Work-subtitle
  font-family serif
  font-style italic
  font-size 20px
  color purple
  font-weight normal

.Work-text
  position relative
  display inline-block
  width 50%
  text-align right
  vertical-align middle
  box-sizing border-box
  padding-right 25px
  font-size 20px

.Work-description
  text-indent 0
  margin-top 1em
  margin-bottom 1em

.Work-image
  border-radius 2px 
  position relative
  display inline-block
  vertical-align middle
  border 6px solid white
  width 400px
  height 300px
  background alpha(purple,0.1)
  background-size 30px 30px
  margin-right -250px
  margin-left 25px
  position relative
  box-shadow 1px 4px 25px alpha(purple,0.15)

  img
    width 100%
    height 100%
.Work-link
  display inline-block
  background pink
  font-size 0.85em
  padding 20px
  padding-top 10px
  padding-bottom 10px
  margin-left 10px
  color whiteish
  font-family font-sans
  text-decoration none
  font-weight bold
  box-shadow 1px 4px 20px alpha(purple,0.2)
  transition background 100ms, color 100ms
  // text-shadow 0 0 1px alpha(purple,0.6)

  &:hover
    background blackish
    color pink

.Work:nth-child(odd)
  .Work-text
    left 50%
    text-align left
    padding-right 0
    padding-left 25px

  .Work-image
    left -50%
    // margin-right -2
    margin-left -85px
  .Work-link
    margin-right 10px
    margin-left 0

.underline
  text-decoration underline

.Email
  text-align center
  font-weight bold
  font-family font-sans
  color blackish
  text-decoration none
  background linear-gradient(180deg,transparent 78%, pink 78%, pink 85%, transparent 85%)
  display inline-block
  margin 0 auto
  margin-top 11px
  margin-bottom 25px
  font-size 30px

  &:hover
    color pink

.Contact-heading
  // margin-bottom 0

.Social
  margin-top 14px

.Social-link
  font-family font-sans
  text-decoration none
  color blackish
  background linear-gradient(180deg,transparent 78%, pink 78%, pink 85%, transparent 85%)
  &:hover
    color blackish
    strong,.underline
      color pink
@media(max-width:950px) and (min-width:769px)
  .Work-image
    width 300px
    height 225px
    margin-left 25px !important

  .Work:nth-child(even)
    .Work-text
      padding-right 15px
@media(max-width: 768px)
  .Nav-link
    font-size 16px
    margin-left 20px
    margin-right 20px
    &:first-child
      margin-left 0
    &:last-child
      margin-right 0

  body
    font-size 14px
  section
    padding-bottom 50px
    margin-bottom 30px
  .Header
    height 75vh
    margin-bottom 60px
  .container
    width 100%
    padding-left 20px
    padding-right 20px
    box-sizing border-box
  .Title
    font-size 40px
  h2
    font-size 35px
    line-height 1
    padding-top 30px
    &::after
      margin-top 18px
      transform scale(0.8,0.8)
  .Title-Center
    width 100%
    text-align center
  .Title-Center-left,.Title-Center-right
    margin-right 0
    position static
  .Title
    letter-spacing 0
    text-transform none
  .Title-small
    letter-spacing 0
    text-transform none
    font-size 0.7em
  .Scene-mountains
    height 200px
    margin-bottom -100px
  .Scene--bottom
    height 100px
    margin-top -30px
  .Scene-mountains--bottom
    margin-bottom 0
  .Email
    font-size 20px
  .Work-text,.Work-image
    display block
    margin-right 0 !important
    margin-left 0 !important
    left auto !important
    right auto !important
    padding-left 0 !important
    padding-right 0 !important
  .Work
    position relative
    padding-top 340px
    margin-bottom 100px
  .Work-text
    width 100%
    text-align center !important
    padding-left 0 !important
    font-size 16px
  .Work-image
    position absolute
    top 0
    left 50% !important
    transform translate(-50%,0)
  .Social
    margin-top 14px
  
  .Social-link
    margin-bottom 10px
    font-size 18px

@media(max-width:450px)
  .Work-image
    width 320px
    height 240px
  .Work
    padding-top 280px
    margin-bottom 70px
