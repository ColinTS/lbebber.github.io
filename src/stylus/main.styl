whiteish = #FFEDDB
yellow = #F7F7B6
pink = #E96F92
purple = #75517D
blackish = #1B2947
green = #54fad4

font-sans='Avenir Next','Segoe ui',Ubuntu,sans-serif;
font-serif=Athelas,Georgia,serif;

body
  background whiteish
  margin 0
  padding 0
  color blackish
  font-family font-serif
  font-size 20px
  line-height 1.6

a
  color pink

p.heading
  font-size 1.2em
p
  margin-top 0.5em
  margin-bottom 0.5em

nav
  position absolute
  width 100%
  z-index 2
  padding-top 20px
  padding-bottom 20px
  text-align center

.Nav-link
  color whiteish
  font-family font-sans
  text-decoration none
  font-weight bold
  padding 10px
  margin 0 40px
  &:first-child
    margin-left 0

  &:last-child
    margin-right 0

  &:hover
    color pink

.text-center
  text-align center

absolute-fill()
  position absolute
  top 0
  left 0
  right 0
  bottom 0

.Header
  position relative
  min-height 300px
  height 75vh
  margin-bottom 90px

.Scene
  absolute-fill()

.Scene--bottom
  position relative
  width 100%
  transform rotate(180deg)
  -webkit-transform rotate(180deg)
  height 150px
  overflow hidden
  pointer-events none

.Scene-sky
  absolute-fill()
  background purple
  background linear-gradient(#1B2947, #282F51, #36365A, #443C63, #52426B, #614973, #704F7B, #815482, #935988, #A55D8D, #B86291, #CB6692, #DD6B93, #EC7691, #F18C90, #F3A195, #F3B6A0, #F3C9B2, #F3DCC7, #F6EDE1)


.Scene-stars
  position absolute
  top 0
  left 0 
  width 100%
  height 100%

.Scene-mountains
  position absolute
  bottom 0
  left 0
  width 100%
  height 300px
  margin-bottom -150px


.Scene-mountains--bottom
  margin-bottom 0

.Title
  font-family font-sans 
  color green
  position absolute
  top 50%
  width 100%
  text-align center
  text-transform uppercase
  margin-top -50px
  letter-spacing 0.2em
  font-size 45px
  line-height 1.4
  font-weight bold

.Title-big
  display block
  height 1em
  margin-bottom 0.2em

.Title-small
  display block
  font-size 0.6em
  color whiteish
  height 1em
  letter-spacing 0.2em
  margin-bottom 15px

.Title-Center 
  position relative
  width 0
  margin-left auto
  margin-right auto

.Title-Center-left
  position absolute
  right 10px
  margin-right -0.2em

.Title-Center-right
  position absolute
  left 10px

section
  padding-bottom 70px
  margin-bottom 50px
  position relative
  &::after
    content ''
    display block
    width 300px
    height 1px
    position absolute
    left 50%
    bottom 0
    margin-left - ( @width / 2 )
    background alpha(purple,0.15)

h2
  text-align center
  font-family font-sans
  font-size 40px
  margin 0
  padding-top 30px
  margin-bottom 30px
  &::after
    content ''
    background url('../img/separator.svg') no-repeat
    display block
    width 67px
    height 17px
    margin 18px auto 0 auto

.ShadedTitle
  background: blackish;
  background: -webkit-linear-gradient(pink,purple,blackish);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;

h3
  margin 0
  font-family font-sans
  font-weight bold
  font-size 30px
  line-height 1

.container
  width 700px
  margin 0 auto

.Works
  list-style-type none
  margin 0
  padding 0
  font-size 0
  padding-top 20px

.Work
  display block
  margin-bottom 60px
  font-size 0
  &:last-child
    margin-bottom 30px

.Work-title
  line-height 1.2

.Work-subtitle
  font-family serif
  font-style italic
  font-size 20px
  color purple
  font-weight normal

.Work-text
  position relative
  display inline-block
  width 50%
  text-align right
  vertical-align middle
  box-sizing border-box
  padding-right 25px
  font-size 20px

.Work-description
  margin-top 1em
  margin-bottom 1.2em

.Work-image
  border-radius 2px 
  position relative
  display inline-block
  vertical-align middle
  border 6px solid white
  width 400px
  height 300px
  background alpha(purple,0.1)
  margin-right -250px
  margin-left 25px
  position relative
  box-shadow 1px 4px 25px alpha(purple,0.15)

  img
    width 100%

.Work-link
  display inline-block
  background pink
  font-size 0.85em
  padding 10px 20px
  color whiteish
  font-family font-sans
  text-decoration none
  font-weight bold
  box-shadow 1px 4px 20px alpha(purple,0.2)

  &:hover
    background blackish
    color pink

  &:first-child
    margin-right 10px

.Work:nth-child(odd)
  .Work-text
    left 50%
    text-align left
    padding-right 0
    padding-left 25px
  .Work-image
    left -50%
    margin-left -85px

.Email
  // font-weight bold
  text-align center
  text-decoration none
  display inline-block
  margin 30px auto 50px auto
  font-size 30px

.Social
  margin-top 10px

.Social-link
  line-height 2

.Footer-link
  font-family font-sans
  text-decoration none
  color blackish
  background linear-gradient(180deg,transparent 96%, pink 96%, pink 100%)

  &:hover strong
    color pink

@media(max-width:950px) and (min-width:769px)
  .Work:nth-child(n) .Work-image
    width 300px
    height 225px
    margin-left 25px

  .Work:nth-child(even)
    .Work-text
      padding-right 15px

@media(max-width: 768px)
  .Nav-link
    font-size 16px
    margin 0 10px

  body
    font-size 16px
  section
    padding-bottom 50px
    margin-bottom 30px
  .Header
    height 75vh
    margin-bottom 60px
  .container
    width 100%
    padding-left 20px
    padding-right 20px
    box-sizing border-box
  .Title
    font-size 40px
  h2
    font-size 35px
    line-height 1
    padding-top 30px
    &::after
      margin-top 18px
      transform scale(0.8,0.8)
  .Title-Center
    width 100%
    text-align center
  .Title-Center-left,.Title-Center-right
    margin-right 0
    position static
  .Title
    letter-spacing 0
    text-transform none
  .Title-small
    letter-spacing 0
    text-transform none
    font-size 0.7em
  .Scene-mountains
    height 200px
    margin-bottom -100px
  .Scene--bottom
    height 100px
  .Scene-mountains--bottom
    margin-bottom 0
  .Email
    font-size 18px
    margin-bottom 35px
  .Work:nth-child(n) 
    position relative
    padding-top 340px
    margin-bottom 100px
    padding-top 280px
    margin-bottom 70px
    &:last-child
      margin-bottom 20px
    .Work-text, .Work-image
      display block
      margin 0
      left auto
      right auto
      padding 0
    .Work-text
      width 100%
      text-align center
      font-size 16px
    .Work-image
      position absolute
      top 0
      left 50%
      width 300px
      margin-left - (( @width + 12px ) / 2)
      height 225px

  // .Social
    // margin-top 14px
  .Social-link
    font-size 18px

